<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <EditText
        android:id="@+id/etwaterFrequency"
        android:layout_width="224dp"
        android:layout_height="73dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter Water Frequency"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etplantName" />

    <EditText
        android:id="@+id/etsunlight"
        android:layout_width="224dp"
        android:layout_height="73dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter Required Sunlight"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etwaterFrequency" />

    <Button
        android:id="@+id/btnaddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Add Plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etsunlight"
        app:layout_constraintVertical_bias="0.159" />

    <EditText
        android:id="@+id/etplantName"
        android:layout_width="230dp"
        android:layout_height="67dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Enter Plant Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>